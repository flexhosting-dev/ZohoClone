{% extends 'layout.html.twig' %}

{% block title %}Create Role - Honeyguide Projects{% endblock %}

{% set page_title = 'New Role' %}

{% block content %}
<div class="role-new-page space-y-6">
    <nav class="role-new-breadcrumb flex items-center gap-2 text-sm text-gray-500">
        <a href="{{ path('app_settings') }}" class="hover:text-primary-600 transition-colors">Settings</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
        <a href="{{ path('app_admin_roles') }}" class="hover:text-primary-600 transition-colors">Permissions</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
        <span class="text-gray-900 font-medium">New Role</span>
    </nav>

    <div class="role-new-content max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h1 class="text-xl font-semibold text-gray-900">Create New Role</h1>
            <p class="mt-1 text-sm text-gray-500">Define a custom role with specific permissions</p>
        </div>

        <form method="post" action="{{ path('app_admin_roles_new') }}" class="p-6 space-y-6">
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Role Name</label>
                    <input type="text" name="name" id="name" required
                           class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm"
                           placeholder="e.g., QA Tester">
                </div>

                <div>
                    <label for="type" class="block text-sm font-medium text-gray-700">Role Type</label>
                    <select name="type" id="type" required
                            class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm">
                        <option value="project">Project Role (assigned per project)</option>
                        <option value="portal">Portal Role (system-wide access)</option>
                    </select>
                </div>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea name="description" id="description" rows="2"
                          class="mt-1 block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm"
                          placeholder="Describe what this role can do..."></textarea>
            </div>

            <div>
                <h3 class="text-sm font-medium text-gray-700 mb-4">Permissions</h3>

                <div class="space-y-6">
                    {% for module, modulePermissions in permissions %}
                    <div class="border border-gray-200 rounded-lg p-4">
                        <div class="flex items-center justify-between mb-3">
                            <h4 class="text-sm font-semibold text-gray-900 capitalize">{{ module }}</h4>
                            <button type="button" onclick="toggleModule('{{ module }}')" class="text-xs text-primary-600 hover:text-primary-800">Toggle All</button>
                        </div>
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                            {% for permission in modulePermissions %}
                            <label class="relative flex items-start">
                                <div class="flex h-6 items-center">
                                    <input type="checkbox" name="permissions[]" value="{{ permission }}"
                                           data-module="{{ module }}"
                                           class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-600">
                                </div>
                                <div class="ml-3 text-sm leading-6">
                                    <span class="text-gray-700">{{ permissionLabels[permission] ?? permission }}</span>
                                </div>
                            </label>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                <a href="{{ path('app_admin_roles') }}" class="rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500">
                    Create Role
                </button>
            </div>
        </form>
    </div>
    </div>
</div>

<script>
function toggleModule(module) {
    const checkboxes = document.querySelectorAll(`input[data-module="${module}"]`);
    const allChecked = Array.from(checkboxes).every(cb => cb.checked);
    checkboxes.forEach(cb => cb.checked = !allChecked);
}
</script>
{% endblock %}
