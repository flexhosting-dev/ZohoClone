{# Header Component #}
{% set theme = app.user.uiTheme|default('gradient') %}

{% if theme == 'gradient' %}
{# Gradient Theme #}
<div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 px-4 shadow-lg sm:gap-x-6 sm:px-6 lg:px-8
    bg-gradient-to-r from-primary-600 via-primary-500 to-indigo-500">
    {# Decorative background elements - contained to prevent overflow #}
    <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
        <div class="absolute -top-10 -left-10 w-40 h-40 bg-white/10 rounded-full blur-2xl"></div>
        <div class="absolute -bottom-8 left-1/4 w-32 h-32 bg-indigo-400/20 rounded-full blur-xl"></div>
        <div class="absolute -top-6 right-1/3 w-24 h-24 bg-primary-300/20 rounded-full blur-xl"></div>
        <div class="absolute -bottom-4 right-10 w-36 h-36 bg-white/10 rounded-full blur-2xl"></div>
    </div>

    <button type="button" class="relative -m-2.5 p-2.5 text-white/90 hover:text-white transition-colors lg:hidden" data-action="click->sidebar#toggle">
        <span class="sr-only">Open sidebar</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
    </button>

    <div class="h-6 w-px bg-white/30 lg:hidden" aria-hidden="true"></div>

    <div class="relative flex flex-1 gap-x-4 self-stretch lg:gap-x-6">
        <div class="relative flex flex-1 items-center">
            {% block page_title %}
            <h1 class="text-lg font-semibold text-white drop-shadow-sm">{{ page_title|default('Dashboard') }}</h1>
            {% endblock %}
        </div>
        <div class="flex items-center gap-x-4 lg:gap-x-6">
            {# User dropdown #}
            <div class="relative" data-controller="dropdown">
                <button type="button" data-action="click->dropdown#toggle" class="-m-1.5 flex items-center p-1.5 group">
                    <span class="sr-only">Open user menu</span>
                    <span class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-white/20 ring-2 ring-white/40 backdrop-blur-sm group-hover:ring-white/60 transition-all">
                        <span class="text-sm font-semibold leading-none text-white">
                            {{ app.user.firstName|slice(0, 1)|upper }}{{ app.user.lastName|slice(0, 1)|upper }}
                        </span>
                    </span>
                    <span class="hidden lg:flex lg:items-center">
                        <span class="ml-4 text-sm font-semibold leading-6 text-white drop-shadow-sm" aria-hidden="true">
                            {{ app.user.fullName }}
                        </span>
                        <svg class="ml-2 h-5 w-5 text-white/70" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                        </svg>
                    </span>
                </button>

                <div data-dropdown-target="menu" class="hidden absolute right-0 z-10 mt-2.5 w-48 origin-top-right rounded-xl bg-white py-2 shadow-xl ring-1 ring-gray-900/5 focus:outline-none">
                    <a href="{{ path('app_profile') }}" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors">
                        <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                        </svg>
                        Your profile
                    </a>
                    <a href="{{ path('app_logout') }}" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-red-600 transition-colors">
                        <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                        </svg>
                        Sign out
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% else %}
{# Classic White Theme #}
<div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 border-b border-gray-200 bg-white px-4 shadow-sm sm:gap-x-6 sm:px-6 lg:px-8">
    <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden" data-action="click->sidebar#toggle">
        <span class="sr-only">Open sidebar</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
    </button>

    <div class="h-6 w-px bg-gray-200 lg:hidden" aria-hidden="true"></div>

    <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6">
        <div class="relative flex flex-1 items-center">
            {% block page_title_classic %}
            <h1 class="text-lg font-semibold text-gray-900">{{ page_title|default('Dashboard') }}</h1>
            {% endblock %}
        </div>
        <div class="flex items-center gap-x-4 lg:gap-x-6">
            {# User dropdown #}
            <div class="relative" data-controller="dropdown">
                <button type="button" data-action="click->dropdown#toggle" class="-m-1.5 flex items-center p-1.5">
                    <span class="sr-only">Open user menu</span>
                    <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-primary-500">
                        <span class="text-sm font-medium leading-none text-white">
                            {{ app.user.firstName|slice(0, 1)|upper }}{{ app.user.lastName|slice(0, 1)|upper }}
                        </span>
                    </span>
                    <span class="hidden lg:flex lg:items-center">
                        <span class="ml-4 text-sm font-semibold leading-6 text-gray-900" aria-hidden="true">
                            {{ app.user.fullName }}
                        </span>
                        <svg class="ml-2 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                        </svg>
                    </span>
                </button>

                <div data-dropdown-target="menu" class="hidden absolute right-0 z-10 mt-2.5 w-48 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none">
                    <a href="{{ path('app_profile') }}" class="block px-3 py-1 text-sm leading-6 text-gray-900 hover:bg-gray-50">
                        Your profile
                    </a>
                    <a href="{{ path('app_logout') }}" class="block px-3 py-1 text-sm leading-6 text-gray-900 hover:bg-gray-50">
                        Sign out
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
